<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:text="1"
        android:id="@+id/layout_popup_4digits_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:textSize="40sp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_popup_4digits_2"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_popup_4digits_3"/>

    <Button
        android:text="2"
        android:id="@+id/layout_popup_4digits_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:textSize="40sp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toRightOf="@id/layout_popup_4digits_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_popup_4digits_4"/>

    <Button
        android:text="3"
        android:id="@+id/layout_popup_4digits_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:textSize="40sp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_popup_4digits_4"
        app:layout_constraintTop_toBottomOf="@id/layout_popup_4digits_1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:text="4"
        android:id="@+id/layout_popup_4digits_4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:textSize="40sp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toRightOf="@id/layout_popup_4digits_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_popup_4digits_2"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>